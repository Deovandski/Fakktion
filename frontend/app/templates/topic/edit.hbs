<h2>Edit <b>{{model.name}}</b> Topic</h2>
<form>
  <div class="input_block_type1">
    <label class="first_label">Name:</label>
    <label class="input_wrapper">{{input value=model.name}}</label>
    <label class="second_label">{{verifyTopicName}}</label>
  </div><br/>
</form>
{{#if session.isAuthenticated}}
  {{#if sessionAccount.user.is_admin}}
    <div class="edit_main_controls">
      <button class="button_type1_normal" {{action "update"}}>Update Topic</button>
      <button class="button_type1_normal" {{action "cancelChanges"}}>Cancel Changes</button>
    </div>
  {{else}}
    <label class="login_required_warning">Only Admins can edit</label>
  {{/if}}
{{/if}}
