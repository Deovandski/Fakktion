<div class="sidebar_sub">
	<h5 class="tag_h5">Genres {{#link-to "genres.index"}}<img width="23px" height="23px" src="/assets/small_settings.png">{{/link-to}}</h5>
		{{#if showGP}}
		<ul class="tag_listing">
			<li class="tag_listing_search">{{input value=genreInputText placeholder="Search Genre" class="genreInput"}}</li>
			{{#each filteredGenres as |genre|}}
				<li><button class="button_type1_genre" {{action "setGenre" genre}}>{{capitalize genre.name}}</button><label class="tag_posts">{{counter-styler genre.posts_count}}</label></li>
			{{/each}}
		</ul>
	{{#if noGenres}}<div class="tag_no_result_genre">No Results</div>{{/if}}
	{{/if}}
	<div class="button_toggler"><button class="button_bar" {{action "setGPV"}}>{{#if showGP}}Hide{{else}}Show{{/if}}</button></div>
</div>
