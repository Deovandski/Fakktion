<div class="sidebar_sub">
	<div class="tag_header">
		<h5>Fact Types</h5>
		<div class="management_link">
			{{#link-to "factTypes.index" id='factTypeManagementTootip' }}<img width="23px" height="23px" src="/assets/small_settings.png">{{/link-to}}
		</div>
		{{#tooltip-on-component target='#factTypeManagementTootip' }}Manage Fact Types.{{/tooltip-on-component}}
	</div>
	<ul class="tag_listing">
		{{#each model.factTypes as |factType|}}
			<li>
				<button class="button_type1_fact_type" {{action "setFactType" factType}}>
					<div class="tag_selection_container">
						<label class="tag_name">{{capitalize factType.name}}</label>
						<label class="tag_posts"> {{counter-styler factType.posts_count}}</label>
					</div>
				</button>
			</li>
		{{/each}}
	</ul>
</div>
