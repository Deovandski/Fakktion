<div class="sidebar_sub">
	<div class="tag_header">
		<h5 class="tag_h5">Fact Types</h5>
		<div class="management_link">{{#link-to "factTypes.index" id='factTypeManagementTootip'}}<img width="23px" height="23px" src="/assets/small_settings.png">{{/link-to}}</div>
		{{#tooltip-on-component target='#factTypeManagementTootip'}}Manage Fact Types.{{/tooltip-on-component}}
	</div>
	{{#if showFTP}}
		<ul class="tag_listing">
			<li class="tag_listing_search">{{input value=factTypeInputText placeholder="Search Fact Type" class="factTypeInput" id='factTypeInputTextTootip'}}
				{{#tooltip-on-component event='click' target='#factTypeInputTextTootip'}}
					Search all existing Fact Types with "{{factTypeInputText}}".
				{{/tooltip-on-component}}
			</li>
			{{#each filteredFactTypes as |factType|}}
				<li><button class="button_type1_fact_type" {{action "setFactType" factType}}>{{capitalize factType.name}}</button><label class="tag_posts">{{counter-styler factType.posts_count}}</label></li>
			{{/each}}
		</ul>
	{{#if noFactTypes}}<div class="tag_no_result_fact_type">No Results</div>{{/if}}
	{{/if}}
	<div class="button_toggler"><button class="button_bar" {{action "setFTPV"}}>{{#if showFTP}}Hide{{else}}Show{{/if}}</button></div>
</div>
