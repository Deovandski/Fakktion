<div class="post_comments_container">
  <ul class="inner_comment_ul">
    {{#each sortedInnerComments as |innerComment|}}
      <li>{{render "post.comment.innerComment.index" innerComment}}</li>
    {{/each}}
  </ul>
  {{#if session.isAuthenticated}}
    <div class="inner_comment_create">{{render "post.comment.innerComments.create" model}}</div>
  {{else}}
    <p  class="login_required_warning">Please login to inner comment</p>
  {{/if}}
</div>
