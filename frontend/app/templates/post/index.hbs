<div class="post_title_container">
  <div class="title_info">
    {{#if canEdit}}
      {{#if isBanned}}
        <h5>{{capitalize model.title}}</h5>
      {{else}}
        <h5>{{capitalize model.title}}<span class="title_edit">{{#link-to 'post.edit'}}(edit){{/link-to}}</span></h5>
      {{/if}}
    {{else}}
      <h5>{{capitalize model.title}}</h5>
      {{#if model.user.is_super_user}}
        <h5>{{#link-to 'user.index' model.user class="button_type1_normal_super_user" }}{{capitalize model.user.display_name}}{{/link-to}}</h5> {{else if model.user.is_admin}}
        <h5>{{#link-to 'user.index' model.user class="button_type1_normal_admin" }}{{capitalize model.user.display_name}}{{/link-to}}</h5> {{else if model.user.is_legend}}
        <h5>{{#link-to 'user.index' model.user class="button_type1_normal_legend" }}{{capitalize model.user.display_name}}{{/link-to}}</h5>
      {{else}}
        <h5>{{#link-to 'user.index' model.user class="button_type1_normal" }}{{capitalize model.user.display_name}}{{/link-to}}</h5>
      {{/if}}
    {{/if}}
  </div>
</div>

<div class="post_buttons_container">
  <div class="tags_info_button">
    <label class="first_label">
      <label class="first_label"><a class="button_type1_normal" target="_blank" href="{{model.fiction_link}}">Fiction Link</a></label>
    </label>
  </div>
  {{#if expandInfo}}
    <div class="more_info_button">
      <label class="first_label">
        <button class="button_type1_normal" {{action "setExpandInfo" false}}>Hide More Info</button>
      </label>
    </div>
  {{else}}
    <div class="more_info_button">
      <label class="first_label">
        <button class="button_type1_normal" {{action "setExpandInfo" true}}>Show More Info</button>
      </label>
    </div>
  {{/if}}
  <label class="first_label"><a class="button_type1_normal" target="_blank" href="{{model.fact_link}}">Fact Link</a></label>
</div>

{{#if expandInfo}}
  <div class="post_tags_info_container">
    <div class="three_row_container">
      <div class="columm_container">
        <b>Fact Type</b>
      </div>
      <div class="columm_container">
        <b>Category</b>
      </div>
      <div class="columm_container">
        <b>Topic</b>
      </div>
    </div>
    <div class="three_row_container">
      <div class="columm_container">
        {{capitalize model.fact_type.name}}
      </div>
      <div class="columm_container">
        {{capitalize model.category.name}}
      </div>
      <div class="columm_container">
        {{capitalize model.topic.name}}
      </div>
    </div>
  </div>

  <div class="post_tags_info_container">
    <div class="row_container">
      <div class="columm_container">
        <label class="first_label">{{counter-styler model.comments_count}} Comments</label>
      </div>
      <div class="columm_container">
        <label class="first_label">{{counter-styler model.views_count}} Views</label>
      </div>
    </div>
    <div class="row_container">
      <div class="columm_container">
        <label class="first_label">Post Created on: {{createdDate}}</label>
      </div>
      <div class="columm_container">
        <label class="first_label">Post Updated on: {{updatedDate}}</label>
      </div>
    </div>
  </div>
{{/if}}

<div class="post_text_container">
  {{{model.text}}}
</div>
{{render "post.comments.index" model}}
