{{#if displayCP}}
	{{#if displayGP}}
		<div class="categories_div_type_dual">
			<h5 class="tag_h5">Categories</h5>
			<ul class="tag_listing">
				{{#each model.categories as |category|}}
					<li><button class="button_type1" {{action "setCID" category}}>{{category.name}}</button>  ({{category.posts_count}})</li>
				{{/each}}
			</ul>
			<div class="visibility_button_div_hide">
				<button class="button_type2_large" {{action "setCPV" false}}>Hide</button>
			</div>
		</div>
	{{else}}
		<div class="categories_div_type_solo">
			<h5 class="tag_h5">Categories</h5>
			<ul class="tag_listing">
				{{#each model.categories as |category|}}
					<li><button class="button_type1" {{action "setCID" category}}>{{category.name}}</button>  ({{category.posts_count}})</li>
				{{/each}}
			</ul>
			<div class="visibility_button_div_hide">
				<button class="button_type2_large" {{action "setCPV" false}}>Hide</button>
			</div>
		</div>
	{{/if}}
{{else}}
	<div class="tag_listing_hidden">
			<h5 class="tag_h5">Categories</h5>
			<div class="visibility_button_div_show">
			<button class="button_type2_large" {{action "setCPV" true}}>Show</button>
		</div>
	</div>
{{/if}}